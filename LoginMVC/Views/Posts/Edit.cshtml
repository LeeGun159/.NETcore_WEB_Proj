@model LoginMVC.Models.Post

<h2>✏️ 게시글 수정</h2>

<form asp-action="Edit" method="post" class="border p-4 bg-light rounded">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">상태</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">수정 완료</button>
</form>
